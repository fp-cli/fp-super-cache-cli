<?xml version="1.0"?>
<ruleset name="FP-CLI">
	<description>Custom ruleset for FP-CLI</description>

	<!-- For help in understanding this file: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<!-- For help in using PHPCS: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Usage -->

	<!-- What to scan -->
	<file>.</file>
	<!-- Ignoring Files and Folders:
		https://github.com/squizlabs/PHP_CodeSniffer/wiki/Advanced-Usage#ignoring-files-and-folders -->
	<exclude-pattern>*/.git/*</exclude-pattern>
	<exclude-pattern>*/ci/*</exclude-pattern>
	<exclude-pattern>*/features/*</exclude-pattern>
	<exclude-pattern>*/packages/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/utils/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="colors"/> <!-- Show results with colors -->
	<arg name="extensions" value="php"/> <!-- Limit to PHP files -->

	<!-- Rules: Check PHP version compatibility - see
		https://github.com/PHPCompatibility/PHPCompatibilityFP -->
	<rule ref="PHPCompatibilityFP">
		<!-- Polyfill package is used so array_column() is available for PHP 5.4- -->
		<exclude name="PHPCompatibility.PHP.NewFunctions.array_columnFound"/>
		<!-- Both magic quotes directives set in fp-settings-cli.php to provide consistent starting point. -->
		<exclude name="PHPCompatibility.PHP.DeprecatedIniDirectives.magic_quotes_runtimeDeprecatedRemoved"/>
		<exclude name="PHPCompatibility.PHP.DeprecatedIniDirectives.magic_quotes_sybaseDeprecatedRemoved"/>
	</rule>

	<!-- For help in understanding this testVersion:
		https://github.com/PHPCompatibility/PHPCompatibility#sniffing-your-code-for-compatibility-with-specific-php-versions -->
	<config name="testVersion" value="5.4-"/>

	<!-- Ignore php_uname mode issue, we're conditionally providing a callback -->
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters.php_uname_modeFound">
		<exclude-pattern>*/php/commands/src/CLI_Command.php</exclude-pattern>
	</rule>

	<!-- Rules: FinPress Coding Standards - see
		https://github.com/FinPress-Coding-Standards/FinPress-Coding-Standards -->
	<rule ref="FinPress-Core">
		<exclude name="Squiz.PHP.DisallowMultipleAssignments.Found" />
		<exclude name="FinPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar" />
		<exclude name="FinPress.NamingConventions.ValidVariableName.MemberNotSnakeCase" />
		<exclude name="FinPress.NamingConventions.ValidVariableName.NotSnakeCase" />
	</rule>

	<!-- For help in understanding these custom sniff properties:
		https://github.com/FinPress-Coding-Standards/FinPress-Coding-Standards/wiki/Customizable-sniff-properties -->
	<rule ref="FinPress.Files.FileName">
		<properties>
			<property name="strict_class_file_names" value="false"/>
		</properties>
		<exclude name="FinPress.Files.FileName.NotHyphenatedLowercase" />
	</rule>
</ruleset>
